+		dev->nvme_mmio + APPLE_ANS2_BOOT_STATUS, ans2_boot_status,
+		ans2_boot_status == APPLE_ANS2_BOOT_STATUS_OK, 100, 10000000);
+	if (result) {
+		dev_err(dev->dev, "ANS did not boot");
+		goto out_unmap;
+	}

# Maintainer: Hector Martin <marcan@marcan.st>

pkgname=asahi-scripts
pkgver=20220918.1
pkgrel=1
pkgdesc='Asahi Linux maintenance scripts'
arch=('any')
url='http://asahilinux.org'
license=('MIT')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/AsahiLinux/${pkgname}/archive/refs/tags/${pkgver}.tar.gz")
sha256sums=('32daa2acff5c0d87115ab71417655fe4029a7559e506c3c1ce4de0e57140834e')
b2sums=('15d39c8dac968002941fadad4604027df68d68d6e8841e932829caf8f3d1af1413e648da933ce099f5d8325b13a545bb4b9e4c299dca69b43f698464bbbc423c')
backup=(etc/m1n1.conf)

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX=/usr DESTDIR=${pkgdir} install

  install -Dm644 "$srcdir/${pkgname}-${pkgver}/LICENSE" \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

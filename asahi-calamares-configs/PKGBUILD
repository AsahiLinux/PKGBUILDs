pkgname=asahi-calamares-configs
pkgver=20220318.2
pkgrel=1
pkgdesc='Asahi Linux Calamares setup configs'
arch=('any')
url='http://asahilinux.org'
license=('MIT')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/AsahiLinux/${pkgname}/archive/refs/tags/${pkgver}.tar.gz")
sha256sums=('43a7967de149ccc3f93d2d99f8a978f37de81db8dad0c1ac45b3f929a1610d8a')
b2sums=('c5583c18d2463148820c5f83dee675feba02cd0f92cbe08337577b6666a820e78fe0bb98c6d69dc7301a1411f63855cf057af4e7245ad264a9a758e6026f65bf')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make PREFIX=/usr DESTDIR=${pkgdir} install

  install -Dm644 "$srcdir/${pkgname}-${pkgver}/LICENSE" \
    "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
